pipeline{
    agent any
    stage{

   	stage('Build')
    	{
		steps
		{
    		echo "building the project...."
		}    	
	}

    	stage('test')
    	{
		steps
		{
    	    	echo "testing the project...."
		}    	
	}

    	stage('deploy')
    	{
		steps
		{
    	    	echo "deploying the project...."
    		}
	}

    	stage('release')
    	{
		steps
		{
    	    	echo "releasing the project"
		}    	
	}
	
	}
}
